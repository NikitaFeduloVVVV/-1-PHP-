<?php
//Функция для проверки отрицательного и неотрицательного числа
function checkIfNegative(float $number) : void {
    if ($number < 0) {
        echo "Число $number является отрицательным.";
    } else {
        echo "Число $number не является отрицательным.";
    }
}

$numberToCheck = -1.25376253725737523;
checkIfNegative($numberToCheck);
?>
